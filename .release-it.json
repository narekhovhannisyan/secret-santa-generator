{
  "git": {
    "requireBranch": false,
    "requireUpstream": true,
    "commit": true,
    "commitMessage": "Release ${version}",
    "push": true,
    "pushArgs": ["--follow-tags"],
    "tag": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN",
    "preRelease": true
  },
  "npm": {
    "publish": false
  }
}